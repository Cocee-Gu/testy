
.information {
  display: flex;
  justify-content: center;
  width: 100%;
  height: 985rpx;
  letter-spacing: 3rpx;
}
.information form {
  width: 92%;
  margin: auto;
  display: flex;
  flex-direction: column;
  background-color: #fff;
  position: relative;
  font-size: 30rpx;
}
.goods_list {
  letter-spacing: 3rpx;
  display: flex;
  font-size: 30rpx;
  flex-direction: row;
  width: 100%;
  height: 85rpx;
  align-items: center;
  border-bottom: 1px solid rgb(238, 238, 238)
}
.checkbox {
  display: flex;
  flex-direction: row;
  width: 94%;
  height: 85rpx;
  align-items: center;
}
.checkbox,.goods,.DIU{
  display: flex;
  flex-direction: row;
  width: 100%;
  height: 20vw;
  align-items: center;
  margin-bottom: 50rpx
}
.checkbox label,.goods label,.DIU label{
  flex: 4 !important;
}  
/*分类选择*/
.classify{
  height: 100%;
  flex: 4.5;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  align-items: center
}
/*单选框*/
.classify radio {
  margin-right: 15rpx;
}
.other {
  height: 40vw;
}
.other text,.checkbox text,.goods text,.DIU text {
  margin-left: 15rpx;
}
.other textarea{
  width:92%;
  margin: auto;
  border: 1px solid rgb(238, 238, 238);
  border-radius: 20rpx;
  padding-left: 25rpx !important;
  padding-top: 20rpx !important;
  margin-top: 15rpx;
  height: 200rpx !important;
  margin-bottom: 50rpx;
  font-size: 25rpx
}
.information label {
  flex: 5;
}
.information input {
  flex: 5;
  font-size: 28rpx;
  text-align: center;
  height: 100%;
}
.fabu_button button {
  border: none !important;
  background-color: #284152 !important;
  width: 55% !important;
  margin: auto;
  margin-top: 45rpx !important;
  border-radius: 20rpx !important;
  color: #fff !important;
  font-size: 35rpx !important;
  font-weight: 700 !important;
  margin-bottom: 30rpx !important;
}
.hidden {
  display: none
}
.time {
  color: #284152 !important
}
/*图片上传*/
.imagepush {
  width: 100%;
  height: 185rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap:wrap;
}
.imagepush view:nth-child(2){
  margin-left: 70rpx;
  margin-right: 70rpx;
}
.imagepush view {
  width: 180rpx;
  height: 180rpx;
  position: relative;
  border: 1rpx solid #8a8a8a;
  border-radius: 15rpx;
}
.imagepush .add {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -25rpx;
  margin-top: -25rpx;
}
/*尾提示*/
.bottomTip {
  width: 460rpx !important;
  height: 30rpx;
  margin: auto;
  text-align: center;
  line-height: 30rpx;
  font-size: 25rpx;
  letter-spacing: 5rpx;
}