.van-button--default {
  position: fixed !important;
  bottom: 118rpx !important;
  width: 60% !important;
  margin-left: 160rpx !important;
  margin-bottom: 30rpx !important;
  border-radius: 20rpx !important;
}

.body {
  overflow: hidden;
}

.informations {
  float: left;
  width: 48%;
  margin-left: 10rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
  overflow: hidden;
  background-color: rgb(248, 247, 247);
  height: 65vw
}

.informations image {
  border-radius-top: 30rpx;
  width: 100%;
  height: 50vw;
}

.informations label {
  letter-spacing: 5rpx;
  width: 175rpx;
  padding-left: 10rpx;
  font-size: 30rpx;
  color: rgb(66, 66, 66);
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.informations text {
  letter-spacing: 5rpx;
  margin-top: 5rpx;
  padding-left: 10rpx;
  padding-right: 20rpx;
  font-size: 25rpx;
  color: rgb(80, 79, 79);
  width: 90%;
  text-overflow: ellipsis;
  word-break: break-all;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.fabu_button {
  width: 100%;
  height: 100rpx;
  position: fixed;
  bottom: 115rpx;
}
.bottombutton {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  margin: auto;
  font-size: 35rpx !important;
  letter-spacing: 5rpx;
  font-weight: 550;
  border-radius: 25rpx;
  color: #fff;
  background-color:#ACCBE2
}
