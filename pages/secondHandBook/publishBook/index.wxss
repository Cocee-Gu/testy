page {
  background-color:rgba(235, 241, 245, 0.8);
  color: rgba(39, 61, 73, 1);
}

.book-container {
  width: 93%;
  display: flex;
  margin: auto;
  flex-direction: column;
  margin-top: 30rpx;
  background-color: #fff; 
  border-radius: 12rpx;
}

.book-container .book-detail {
  display: flex;
  width: 91%;
  margin: 30rpx auto;
}

.book-container image {
  width: 220rpx;
  height: 290rpx;
  margin-right: 26rpx;
  border-radius: 16rpx;
  box-shadow: 0 6rpx 12rpx rgba(3, 86, 80, 0.1);
}

.book-container .title {
  font-size: 38rpx;
  margin-bottom: 10rpx;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.book-container .item {
  height: 44rpx;
  font-size: 28rpx;
}

