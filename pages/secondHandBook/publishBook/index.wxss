.person-idea {
  width: 93%;
  display: flex;
  margin: auto;
  margin-top: 30rpx;
  flex-direction: column;
  background-color: #fff;
  border-radius: 12rpx;
}

.person-idea .item {
  width: 93%;
  display: flex;
  margin: auto;
}

.person-idea .item {
  height: 90rpx;
  display: flex;
  justify-content: space-between;
}

.person-idea .item:not(:first-child) {
  border-top: 2rpx solid #eee;
}

.person-idea .item:first-child {
  margin-top: 20rpx;
}

.person-idea .item:last-child {
  margin-bottom: 20rpx;
}

.person-idea .lable {
  margin: auto;
  margin-left: 20rpx;
}

.person-idea .input {
  margin: auto 30rpx;
  width: 320rpx;
}

.person-idea input {
  width: 320rpx;
  margin-right: 0;
}

.person-idea .input radio-group {
  width: 320rpx;
}


/* 导入课程按钮 */
.ensure{
  display: flex;
  justify-content: center;
  margin-top: 60rpx;
  margin-bottom: 100rpx;
}

.ensure-button{
  width: 300rpx;
  height: 90rpx;
  line-height: 90rpx;
  border: 2rpx solid #ccc;
  border-radius: 30rpx;
  text-align: center;
  background: #035650;
  color: #fff;
  font-size: 18px;
  font-family: Arial;
}